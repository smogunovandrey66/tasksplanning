<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="point"
            type="com.smogunovandrey.tasksplanning.taskstemplate.Point" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/border_blue">
        <TextView
            android:id="@+id/txt_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Long.toString(point.num)}"/>
        <TextView
            android:id="@+id/txt_name"
            app:layout_constraintStart_toEndOf="@+id/txt_number"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{point.name}"/>
        <TextView
            android:id="@+id/txt_trigger_type"
            app:layout_constraintStart_toEndOf="@+id/txt_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:trigger_type="@{point.triggerType}"
            android:text="@string/trigger_type"/>
        <TextView
            android:id="@+id/txt_gps_point"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_trigger_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:drawableStartCompat="@drawable/baseline_location_on_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>